<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.auto.mapper.UserInfoMapper">

    <!--查询userInfo-->
    <sql id="columns">
        phone,
        password,
        nick_name
    </sql>
    <!--注册用户-->
    <insert id="register">
        INSERT INTO user_info(phone , password , nick_name)
        VALUES(#{phone},#{password},#{nickName})
    </insert>

    <!--根据手机号查询改手机号是否被注册-->
    <select id="findByPhone" resultType="UserInfo">
        SELECT
        <include refid="columns"></include>
        FROM
        user_info
        WHERE
        phone = #{phone}
        AND
        is_deleted = 0
    </select>

    <!--根据名称查询名称是否被注册-->
    <select id="findByNickName" resultType="UserInfo">
        SELECT
        <include refid="columns"></include>
        FROM
        user_info
        WHERE
        nick_name = #{nickName}
        AND
        is_deleted = 0
    </select>
</mapper>